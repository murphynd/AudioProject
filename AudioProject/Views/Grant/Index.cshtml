@using System
@{
  Layout = "_Layout";
}
<br><br><br><br>

<br><br>

<button id="startsound" class="btn btn-outline-dark btn-block">begin audio</button>

<br><br><br>
<canvas class="visualizer"; id="myCanvas"; width="640" height ="100"></canvas>

<h3 style="text-align:center">select chords</h3><hr> <br>
<div class="hiddenOverflow">
  <input id="chord-1" value="1" type="radio" name="chord"/>
  <input id="chord-2" value="2" type="radio" name="chord"/>
  <input id="chord-3" value="3" type="radio" name="chord"/>
  <input id="chord-4" value="4" type="radio" name="chord"/>
  <input id="chord-5" value="5" type="radio" name="chord"/>


  <ul>
    <li><label for="chord-1">1</label></li>
    <li><label for="chord-2">2</label></li>
    <li><label for="chord-3">3</label></li>
    <li><label for="chord-4">4</label></li>
    <li><label for="chord-5">5</label></li>
  </ul>
</div><br><br>

<div class="field">
  <section class="section">
    <span class="select">
      <select id="synth-type" class="form-control">
        <option value="Synth" selected>Synth</option>
        <option value="AMSynth">AMSynth</option>
        <option value="FMSynth">FMSynth</option>
        <option value="PolySynth">PolySynth</option>
        <option value="MonoSynth">MonoSynth</option>
        <option value="PluckSynth">PluckSynth</option>
      </select>
    </span>
  </section>
</div>
<br>

<div class="field">
  <section class="section">
    <span class="select">
      <select id="oscillator-type" class="form-control">
        <option value="triangle">triangle</option>
        <option value="sawtooth">sawtooth</option>
        <option value="sine">sine</option>
        <option value="square">square</option>
      </select>
    </span>
  </section>
</div><br>

<div class="field">
  <select id="oscillator-partials" class="form-control">
    <option value="none">none</option>
    <option value="2">2</option>
    <option value="4">4</option>
    <option value="8">8</option>
    <option value="16">16</option>
    <option value="32">32</option>
    <option value="64">64</option>
  </select>
</div>
<br><br>
<p>Volume: <span id="volume-output"></span></p>
  <div class="slidecontainer">
    <input type="range" min="50" max="100" value="80" class="slider" id="volume-wet">
  </div>
<br>
<p>Filter: <span id="filter-output"></span></p>
  <div class="slidecontainer">
    <input type="range" min="20" max="10000" value="0" class="slider" id="filter-wet">
  </div>
<br>
<p>Delay: <span id="delay-output"></span></p>
  <div class="slidecontainer">
    <input type="range" min="0" max="100" value="0" class="slider" id="delay-wet">
  </div>
<br>
<p>Room Size: <span id="reverb-output"></span></p>
  <div class="slidecontainer">
    <input type="range" min="3" max="200" value="0" class="slider" id="reverb-wet">
  </div>
<br>
<p>BPM: <span id="bpm-output"></span></p>
  <div class="slidecontainer">
    <input type="range" min="20" max="1000" value="100" class="slider" id="bpm-speed">
  </div>
<br>


<p id="mute" data-muted="false" class="btn btn-outline-dark btn-block">mute</p>


